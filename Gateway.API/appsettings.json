{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Jwt": {
    "Key": "ThisIsMyUltraSuperSecretKey1234567890",
    "Issuer": "AuthService",
    "Audience": "PesApp"
  },

  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "terms-route": {
        "ClusterId": "terms-cluster",
        "Match": {
          "Path": "terms-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "terms-cluster": {
        "Destinations": {
          "description1": {
            "Address": "http://termadmissionmanagement.api:8080/api"
          }
        }
      }
    }
  }
}
